<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>

    <style>
        input{
            margin: 5px 0px;
        }
        .header{
            display: flex;
            justify-content: center;
        }
        .nav a{
            margin:20px;
        }
        a{
            text-decoration: none;
            color: blue;
            font-size: 18px;
        }
        select{
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="nav">
            <a href="addstaff">Add Staff</a>
            <a href="addstudent">Add Student</a>
            <!-- <a href="addresult">Add Result</a> -->
            <a href="viewstaff">View Staff</a>
            <a href="view_result">View Result</a>
            <a href="viewstudent">View Student</a>
            <a href="addstd">Add STD</a>
            <a href="adddiv">Add Div</a>
        </div>
    </div>
    <h1 align="center">Add Student</h1>

    <form method="post">
        <table align="center">
            <tr>
                <td>Roll No:</td>
                <td><input type="text" name="rno"></td>
            </tr>
            <tr>
                <td>Student Name:</td>
                <td><input type="text" name="name"></td>
            </tr>
            <tr>
                <td>Standard:</td>
                <!-- <td><input type="text" name="std"></td> -->
                <td>
                    <select name="std" >
                        <option value="" selected disabled>Select STD</option>
                        <% result.forEach(function(data){%>
                        <option value="<%= data.std%>"><%= data.std%></option>
                        <%})%>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Division</td>
                <td>
                    <select name="division">
                        <option value="" selected disabled>Select Division</option>
                        <% result.forEach(function(data){%>
                            <option value="<%= data.division%>"><%= data.division%></option>
                        <%})%>
                    </select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Add"></td>
            </tr>
        </table>
    </form>
</body>
</html>